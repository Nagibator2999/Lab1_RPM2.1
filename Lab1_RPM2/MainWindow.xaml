<Window x:Class="Lab1_RPM2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1_RPM2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".1*" />
            <RowDefinition Height=".9*" />
        </Grid.RowDefinitions>
        <Button x:Name="AddButton" Click="AddPartnerButton_Click" Content="Добавить партнера" HorizontalAlignment="Left" Margin="10" Width="115" Height="20"/>
        <Button x:Name="HistoryButton" Click="ShowHistory_Click" Content="История реализации" HorizontalAlignment="Left" Margin="140 10 10 10" Width="125" Height="20"/>
        <ListBox 
            ItemsSource="{Binding Partners}" 
            Grid.Row="1" 
            x:Name="listBox" 
            SelectionChanged="listBox_SelectionChanged"
            MouseDoubleClick="listBox_MouseDoubleClick"
            SelectedValuePath="Inn"
            HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Margin="10" Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontSize="20" Text="{Binding TypePartner}"/>
                                    <TextBlock FontSize="20" Text=" | "/>
                                    <TextBlock FontSize="20" Text="{Binding TitlePa}"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Director}"/>
                                <TextBlock Text="{Binding PhoneNumber}"/>
                                <TextBlock Text="{Binding Rating}"/>
                            </StackPanel>
                            <TextBlock Grid.Column="1" 
                                           FontSize="20" 
                                           Text="{Binding Discount}" 
                                           TextAlignment="Right" 
                                           VerticalAlignment="Center"
                                           Margin="10,0,0,0"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
